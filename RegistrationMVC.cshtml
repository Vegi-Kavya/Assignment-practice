                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox"> Remember me
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </td>
                    <td>
                        <div class="container">
                            <table class="table table-bordered ">
                                <thead>
                                    <tr>
                                        <th>Music Collection</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Classic</td>
                                    </tr>
                                    <tr>
                                        <td>Hip-Pop</td>
                                    </tr>
                                    <tr>
                                        <td>Romantic</td>
                                    </tr>
                                    <tr>
                                        <td>Rock</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </td>
                    <td>
                        <div>
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="">Romantic
                            </label>
                        </div>
                        <div>
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="">Hip-Pop
                            </label>
                        </div>
                        <div>
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="">Classic
                            </label>
                        </div>
                        <div>
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="">Rock
                            </label>
                        </div>
                    </td>
                    <td>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="optradio">A R Rehman
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="optradio">Ramya
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="optradio">Lipsika
